<?xml version="1.0" encoding="utf-8"?>
<!-- Profile update layout â€“ equivalent to ProfileUpdatePage.jsx -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:contentPadding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header: Title + Logout Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Update Profile"
                        android:textColor="@color/orange_primary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- Reusable Logout Button component -->
                    <com.citu.ura.components.LogoutButton
                        android:id="@+id/logoutButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Loading indicator -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/orange_primary" />

                <!-- Form content container -->
                <LinearLayout
                    android:id="@+id/formContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Avatar with initials -->
                    <FrameLayout
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/avatar_background"
                        android:clipToOutline="true">

                        <TextView
                            android:id="@+id/tvInitials"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                    </FrameLayout>

                    <!-- Error message (hidden by default) -->
                    <TextView
                        android:id="@+id/tvError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@color/error_bg"
                        android:padding="12dp"
                        android:textColor="@color/error_text"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <!-- Success message (hidden by default) -->
                    <TextView
                        android:id="@+id/tvSuccess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@color/success_bg"
                        android:padding="12dp"
                        android:textColor="@color/success_text"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <!-- First Name input (reusable component) -->
                    <com.citu.ura.components.AppInputField
                        android:id="@+id/inputFirstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:fieldHint="First Name"
                        app:fieldInputType="text" />

                    <!-- Last Name input (reusable component) -->
                    <com.citu.ura.components.AppInputField
                        android:id="@+id/inputLastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:fieldHint="Last Name"
                        app:fieldInputType="text" />

                    <!-- Email input (reusable component) -->
                    <com.citu.ura.components.AppInputField
                        android:id="@+id/inputEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:fieldHint="Email"
                        app:fieldInputType="email" />

                    <!-- Save and Cancel buttons -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="24dp"
                        android:text="Save Changes"
                        android:textAllCaps="false"
                        app:backgroundTint="@color/orange_primary"
                        app:cornerRadius="8dp" />

                    <!-- Saving indicator (hidden by default) -->
                    <ProgressBar
                        android:id="@+id/progressBarSaving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:indeterminateTint="@color/orange_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancel"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:text="Back to Profile"
                        android:textAllCaps="false"
                        android:textColor="@color/orange_primary"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="@color/orange_primary"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>